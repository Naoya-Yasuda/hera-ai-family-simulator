# データベース設定
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_family_sim
REDIS_URL=redis://localhost:6379

# JWT設定
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Gemini API設定
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=2000

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=asia-northeast1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Google ADK Configuration
ADK_PROJECT_ID=your-project-id
ADK_LOCATION=asia-northeast1
ADK_MODEL=gemini-2.5-pro

# 画像生成設定
DALL_E_API_KEY=your-dalle-api-key-here
DALL_E_MODEL=dall-e-3

# 音声合成設定
TTS_API_KEY=your-tts-api-key-here
TTS_VOICE_ID=your-voice-id-here

# AWS設定
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-1
S3_BUCKET=ai-family-simulator-media

# セキュリティ設定
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# ログ設定
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/ai-family-simulator/app.log

# 監視設定
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3001

# 開発環境設定
DEBUG=true
ENVIRONMENT=development
